<div id="after-parking-questions">

  <h3 class="main-question">{{ currentNode.decision_point.situation }}</h3>

  <div class="pole">
    <div ng-include="'<%= asset_path 'svgs/_signPole.html' %>'"></div>
  </div>

  <button ng-click="advancePlane(); setCurrentDecision(decision)" ng-repeat="decision in currentNode.decisions" class="sign plane-advance" ng-id="{{ 'cntr-' + $index+1 }}">
      <div class="holder">
        <div ng-include="'<%= asset_path 'svgs/_signHolder.html' %>'"></div>
      </div>
      <div class="inner-content" ng-class="signColors[$index+1]">
        <div class="icon-c">
          <div class="arrow-c">
            <div ng-include="'<%= asset_path 'svgs/_signArrow.html' %>'"></div>
          </div>
        </div>
        <div class="text">
          {{ decision.decision }}
        </div>
      </div>
    </button>
</div>
