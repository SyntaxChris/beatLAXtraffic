<h2>{{currentNode.question.question}}</h2>
<ul>
  <li
    ng-repeat="answer in currentNode.answers"
    ng-click="addAnswerToCurrentAnswers(answer)">
    {{answer.answer}}
  </li>
</ul>
<div ng-if="currentAnswers.length > 0">
  <ul>
    <p>you have selected:</p>
    <li ng-repeat="answer in currentAnswers">
      {{answer.answer}}
    </li>
  </ul>
</div>
<button ng-click="submit()">Submit</button>
