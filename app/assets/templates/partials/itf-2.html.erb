<!-- 17. ICON QUESTIONS -->
<div id="icon-questions">

  <div class="large-12 medium-12 small-12 columns">

    <div class="row">
      <h3 class="main-question">
        Imagine that you could customize this future location
        <br>amenities: {{ amenities }}</br>
      </h3>
    </div>


    <div class="row">
      <div class="large-7 medium-7 small-12 columns">
        <div class="answer-container">
          <div class="row no-gutter">
            <div class="ac-header">
              Pick your top 3 desired amenities
            </div>
          </div>
          <div class="row">
            <div class="small-9 small-centered columns">
              <div class="row holder">
                <div class="small-4 columns">
                  <!-- need an angular if that either shows the number function,
                       or the ng-include for the amenity at that index -->
                  <div ng-click="addToAmenities(amenities[0])" class="icon-holder">
                    1
                    <div ng-if="amenities[0] != null" ng-include="getAnswerIconPath(amenities[0].id)"></div>
                    <div class="clone-container"></div>
                    <div class="icon-remove">
                      <div ng-include="'<%= asset_path 'svgs/_removeIcon.html' %>'"></div>
                    </div>
                  </div>
                </div>
                <div class="small-4 columns">
                  <!-- need an angular if that either shows the number function,
                       or the ng-include for the amenity at that index -->
                  <div ng-click="addToAmenities(amenities[1])" class="icon-holder">
                    2
                    <div ng-if="amenities[1] != null" ng-include="getAnswerIconPath(amenities[1].id)"></div>
                    <div class="clone-container"></div>
                    <div class="icon-remove">
                      <div ng-include="'<%= asset_path 'svgs/_removeIcon.html' %>'"></div>
                    </div>
                  </div>
                </div>
                <div class="small-4 columns">
                  <!-- need an angular if that either shows the number function,
                       or the ng-include for the amenity at that index -->
                  <div ng-click="addToAmenities(amenities[2])" class="icon-holder">
                    3
                    <div ng-if="amenities[2] != null" ng-include="getAnswerIconPath(amenities[2].id)"></div>
                    <div class="clone-container"></div>
                    <div class="icon-remove">
                      <div ng-include="'<%= asset_path 'svgs/_removeIcon.html' %>'"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="next-btn">Next</div>
        </div>
      </div>

      <div class="large-5 medium-5 small-12 columns">
        <div class="icon-container">
          <div ng-repeat="answer in currentNode.answers">
            <div ng-click="addToAmenities(answer)">
              <div class="small-4 columns">
                <div class="icon-holder">
                  <div ng-include="getAnswerIconPath(answer.id)"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
