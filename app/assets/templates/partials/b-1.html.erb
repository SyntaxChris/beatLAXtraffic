<!-- Why do you choose to park your car? -->
<div id="why-park-car">
  <h3 class="main-question">{{ currentNode.question.question }}</h3>
  <h5 class="sub-header">Select all that apply</h5>
  <div class="tile-ctnr">
    <div 
      class="tile-bbl"
      ng-repeat="answer in currentNode.answers | orderBy:'custom_order'"
      ng-click="addAnswerToCurrentAnswers(answer)"
      ng-class="{
        'tile-1' : $index === 0,
        'tile-2' : $index === 1,
        'tile-3' : $index === 2,
        'tile-4 other' : $index === 3
    }">
      <div class="checkmark-ctnr">
        <div ng-include="'<%= asset_path 'svgs/_bblCheck.html' %>'"%></div>
      </div>
      <div class="icon" ng-if="$index === 0">
        <div ng-include="'<%= asset_path 'svgs/_carParkBubble.html' %>'"></div>
      </div>
      <div class="icon" ng-if="$index === 1">
        <div ng-include="'<%= asset_path 'svgs/_avoidTraffic.html' %>'"></div>
      </div>
      <div class="icon" ng-if="$index === 2">
        <div ng-include="'<%= asset_path 'svgs/_peopleParkBubble.html' %>'"></div>
      </div>
      <div class="icon" ng-if="$index === 3">
        <div ng-include="'<%= asset_path 'svgs/_questionBubble.html' %>'"></div>
      </div>
      <div class="title">
        {{ answer.answer }}
      </div>
    </div>
  </div>
  <div class="btn-row">
    <button ng-click="submit(null, true)" class="tile-next plane-advance">
      NEXT
    </button>
  </div>

  <div class="other-ctnr">
    <div class="other-bbl">
      <textarea id="park-txt" cols="1" rows="6" placeholder="Please write here." maxlength="140"></textarea>
      <div class="btn-ctnr">
        <div class="counter"></div>
        <button class="save">SAVE</button>
        <button class="cancel">CANCEL</button>
      </div>
    </div>
  </div>
</div>


