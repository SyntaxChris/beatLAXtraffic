 <!-- Why do you choose to park your car? -->
<div id="why-park-car">
  <div class="row" style="text-align:center">
    <h3 class="main-question">{{ currentNode.question.question }}</h3>
    <h3 class="main-question">Why do you choose to park your car?</h3>
  </div>
  {{ currentAnswers }}
  <div class="hide-for-small-only">
    <div ng-click="addMultipleChoice(answer)" ng-repeat="answer in currentNode.answers" class="row" style="padding: 0 10px 0 10px; margin-top: 5%">
      <div class="large-3 medium-3 columns">
        <div class="parking-bubble" ng-class="{parking-bubble-other: answer.answer.indexOf('other') > -1}">
          <div class="unchecked" style="position: absolute; right: 5px; top: -5%">
            <div ng-include="'<%= asset_path 'svgs/_unchecked.html' %>'"></div>
          </div>
          <div class="bubble-logo">
            <div ng-if="answer.answer.indexOf('convenient') > -1" ng-include="'<%= asset_path 'svgs/_carParkBubble.html' %>'"></div>
            <div ng-if="answer.answer.indexOf('avoid') > -1" ng-include="'<%= asset_path 'svgs/_avoidTraffic.html' %>'"></div>
            <div ng-if="answer.answer.indexOf('terminal') > -1" ng-include="'<%= asset_path 'svgs/_peopleParkBubble.html' %>'"></div>
            <div ng-if="answer.answer.indexOf('other') > -1" ng-include="'<%= asset_path 'svgs/_questionBubble.html' %>'"></div>
          </div>
          <div class="parking-question-font" data-car="uncolored">
            {{ answer.answer }}
            <!-- When convenient parking is available -->
          </div>
          <div ng-if="answer.answer.indexOf('other') > -1">
            <div class="parking-other-text-area" style="display: none; position: relative; top: 30%; position: relative; z-index: 20">
              <textarea id="other-info" cols="1" rows="5" maxlength="140"></textarea>
            </div>
            <br>
            <div id="char-count" style="display: none; position: absolute; margin-left: 15%; text-align:center; color: #B2C4D4; font-size: 12px; width: 90%; margin-left: auto; margin-right: auto"></div>
            <div class="parking-ok-btn">OK</div>
          </div> <!-- end ng-if for other -->
        </div>
      </div>
