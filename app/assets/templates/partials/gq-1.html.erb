            <div class="bubble-icon-container" id="container-1">
              <div ng-include="'<%= asset_path 'svgs/_strategyStopWatch' %>'"></div>
              <div class="strategy-answer" id="stopwatch-answer">
                To get in and out of the airport as quickly as possible
              </div>
            </div>
          </div>
          <div class="large-4 medium-4 small-4 columns">
            <div class="bubble-icon-container" id="container-2">
              <div ng-include="'<%= asset_path 'svgs/_grayParking' %>'"></div>
              <div class="strategy-answer" id="parking-answer">
                To avoid paying for parking
              </div>
