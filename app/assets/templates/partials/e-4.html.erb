<div id="last-question-set">
  <!-- set 1 -->
  <div id="question-set-1">
    <div class="large-8 medium-8 small-12 larger-centered medium-centered small-centered columns">
      <h3 class="main-question">{{ currentNode.question.question }}</h3>
    </div>

    <div ng-repeat="answer in currentNode.answers">
      <div ng-if="answer.answer.indexOf('Specify') === -1">
        <div class="row" style="margin-bottom: 1.5%">
          <div class="large-5 medium-5 small-9 large-centered medium-centered small-centered columns last-questions">
            <div class="question-wrapper-1" ng-click="immediateSubmitAnswer(answer)">
              <div class="question-text" ng-id="{{ 'q' + $index }}">
                {{ answer.answer }}
              </div>
            </div>
          </div>
        </div>
      </div>
      <div ng-if="answer.answer.indexOf('Specify') > -1">
        <div class="row" style="margin-bottom: 1.5%; margin-top: 3%"  id="other-last">
          <div class="large-5 medium-5 small-9 large-centered medium-centered small-centered columns last-questions">
            <div class="question-wrapper-1-other">
              <div class="question-text">
                {{ answer.answer }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="free-form-popup">
      <div class="free-form-bg">
        <textarea id="other-info-last-questions" cols="1" rows="5" maxlength="140" placeholder="Please write here." ng-model="currentOther.text" ng-change="determineOtherText(currentOther.text, answer.id)" ></textarea>
        <div class="flextainer">
          <div class="item-1">
            <div id="char-count-last-questions" style="color: #B2C4D4"></div>
          </div>
          <div class="item-2">
            <div class="other-btn" id="last-other-save" ng-click="immediateSubmitAnswer(answer)">Save</div>
          </div>
          <div class="item-3">
            <div class="other-btn" id="last-other-cancel">Cancel</div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

