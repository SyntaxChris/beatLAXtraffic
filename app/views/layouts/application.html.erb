        <!-- End of DoubleClick Floodlight Tag: Please do not remove -->
      <% end %>

      <div id="fb-root"></div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
      <%= javascript_include_tag "vendor/modernizr" %>
      <%= csrf_meta_tags %>
      <%= javascript_include_tag "application" %>
